<?xml version="1.0" encoding="UTF-8"?>
<model name="gp:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Document Model for GranPorturaria</description>
    <author>Gerardo Alejandro Ramirez Sanchez</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
    </imports>

    <!-- Custom namespace for your domain -->
    <namespaces>
        <namespace uri="http://www.granporturaria.com.mx/model/content/1.0" prefix="gp"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <constraints>

    	<constraint type="LIST" name="gp:valuesPriority">
          <parameter name="allowedValues">
            <list>
              <value>Alta</value>
              <value>Mediana</value>
              <value>Baja</value>
            </list>
          </parameter>
        </constraint>

        <constraint type="LIST" name="gp:valuesRating">
          <parameter name="allowedValues">
            <list>
              <value>Excelente</value>
              <value>Buena</value>
              <value>Normal</value>
              <value>Deficiente</value>
              <value>Pendiente</value>
            </list>
          </parameter>
        </constraint>

    </constraints>

	<types>

		<type name="gp:doc">
	      <title>Documento General Granportuaria</title>
	      <parent>cm:content</parent>
	    </type>
	    
	    
	    
	    <type name="gp:reporteISO9001">
	    
	    	<title> Reporte ISO 900 </title>
	    	<parent>gp:doc</parent>
	    	<properties>
	    		
	    	
	    	
	    		
	    	<property name="gp:tipoReporte">
		      <type>d:text</type>
		      <mandatory enforced="false">true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>false</tokenised>
              </index>
		      <constraints>
		        <constraint type="LIST" name="gp:valuesTipoReporte">
		          <parameter name="allowedValues">
		            <list>
		              <value>ISO-9001 Reporte Tickets Soporte</value>
		            </list>
		          </parameter>
		        </constraint>
		      </constraints>
		    </property>
	    	</properties>
	    </type>

	    <type name="gp:typeSupportTicket">
	      <title>Documento de Ticket de Soporte</title>
	      <parent>gp:doc</parent>

	      <properties>

		    <property name="gp:ticketFolio">
		      <type>d:text</type>
		      <protected>true</protected>
		      <mandatory>true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>false</tokenised>
              </index>
		    </property>

		  	<property name="gp:ticketEquipment">
		      <type>d:text</type>
		      <mandatory>true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>true</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketModule">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>true</tokenised>
              </index>
		    </property>

		  	<!-- se usara cm:title
		  	<property name="gp:ticketDescription">
		      <type>d:text</type>
		      <mandatory>true</mandatory>
		    </property>
		     -->

		  	<!-- se usara cm:description
		  	<property name="gp:ticketDetail">
		      <type>d:text</type>
		      <mandatory>true</mandatory>
		    </property>
		     -->

		    <property name="gp:ticketUserName">
		      <type>d:text</type>
		      <mandatory>true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketUserFirstName">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketUserLastName">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketUserEmail">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketUserTelephone">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketUserMobile">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketTechnician">
		      <type>d:text</type>
		      <mandatory>true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>false</tokenised>
              </index>
		    </property>

		    <property name="gp:ticketAnalysis">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		    </property>

		  	<property name="gp:ticketActions">
		      <type>d:text</type>
		      <mandatory enforced="false">true</mandatory>
		    </property>

		  	<property name="gp:ticketPriority">
		      <type>d:text</type>
		      <mandatory enforced="true">true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>false</tokenised>
              </index>
		      <constraints>
		        <constraint ref="gp:valuesPriority"/>
		      </constraints>
		    </property>

		  	<property name="gp:ticketStatus">
		      <type>d:text</type>
		      <mandatory enforced="false">true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>false</tokenised>
              </index>
		      <constraints>
		        <constraint type="LIST" name="gp:valuesStatus">
		          <parameter name="allowedValues">
		            <list>
		              <value>CREADO</value>
		              <value>EN-PROCESO</value>
		              <value>CANCELADO</value>
		              <value>RESUELTO</value>
		              <value>CERRADO</value>
		              <value>CERRADO-SIN-RETRO</value>
		              <value>RE-TRABAJO</value>
		              <value>PENDIENTE_PROVEEDOR</value>
		              <value>CERRADO-POR-NO-ATENCION</value>
		            </list>
		          </parameter>
		        </constraint>
		      </constraints>
		    </property>

		  	<property name="gp:ticketServiceRating">
		      <type>d:text</type>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>both</tokenised>
              </index>
		      <constraints>
		        <constraint ref="gp:valuesRating" />
		      </constraints>
		    </property>

		    <property name="gp:ticketUserCloseComments">
		      <type>d:text</type>
		      <mandatory>false</mandatory>
		    </property>
		    
		    
		    <property name="gp:ticketUnitCost">
		      <type>d:text</type>
		      <mandatory enforced="false">true</mandatory>
		      <index enabled="true">
                 <atomic>true</atomic>
                 <stored>false</stored>
                 <tokenised>false</tokenised>
              </index>
		      <constraints>
		        <constraint type="LIST" name="gp:valuesUnitCost">
		          <parameter name="allowedValues">
		            <list>
		              <value>MADRINAS</value>
		              <value>AUTOTRANSPORTE</value>
		            </list>
		          </parameter>
		        </constraint>
		      </constraints>
		    </property>
		    

		  </properties>

	      <mandatory-aspects>
	      </mandatory-aspects>
	    </type>

	</types>

    <aspects>


    </aspects>


</model>
